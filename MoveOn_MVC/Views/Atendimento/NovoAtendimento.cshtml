@model MoveOn_MVC.Models.Atendimento

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NovoAtendimento</title>

    <link href="@Url.Content("~/Content/bootstrap.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/estilo.css")" rel="stylesheet" />
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @Html.Partial("_MenuApplication")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal col-md-12">
            <h4>Novo Atendimento</h4>
            <hr />

            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.TipoServico, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.TipoServico, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.TipoServico, "", new { @class = "text-danger" })
                </div>
            </div>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group col-md-8">
                @Html.LabelFor(model => model.StatusAtendimento, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.StatusAtendimento, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StatusAtendimento, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-8">

                @Html.LabelFor(model => model.MomAbertura, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.MomAbertura, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.MomAbertura, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-8">

                @Html.LabelFor(model => model.InfoConclusao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    <textarea name="InfoConclusao" class="form-control" rows="6" cols="50"></textarea>
                    @Html.ValidationMessageFor(model => model.InfoConclusao, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group col-md-8">
                <div class="col-md-offset-2 col-md-8">
                    <input type="submit" value="Criar" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</body>
</html>
