@*@model IEnumerable<MoveOn_MVC.Models.Servico>*@

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ListaServicos</title>
</head>
<body>
    @Html.Partial("_MenuApplication")

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InfoAdicional)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InfoAdicional)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ServicoID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ServicoID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ServicoID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
